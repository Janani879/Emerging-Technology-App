            android:layout_width="171dp"
            android:layout_height="match_parent"
            android:paddingRight="40dp"
            android:paddingBottom="15dp"
            android:src="@drawable/img_8"
            app:shapeAppearanceOverlay="@style/CircleImageViewStyle" />
